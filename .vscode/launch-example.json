{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with CMake Variables",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/${cmake:CMAKE_BUILD_TYPE}/${cmake:CMAKE_PROJECT_NAME}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "${env:PATH}:${cmake:CMAKE_BINARY_DIR}/lib"
                },
                {
                    "name": "DEFINES",
                    "value": "${cmake:MY_DEFINE:FALLBACK_VALUE}"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}